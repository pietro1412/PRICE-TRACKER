# Application
APP_NAME=Price Tracker API
APP_VERSION=0.1.0
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/pricetracker

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:5174"]

# Scraping
SCRAPE_RATE_LIMIT_SECONDS=30
SCRAPE_MAX_RETRIES=3

# Scheduler
SYNC_PRICES_INTERVAL_HOURS=6
SYNC_TOURS_INTERVAL_HOURS=24
CLEANUP_DAYS_TO_KEEP=90
