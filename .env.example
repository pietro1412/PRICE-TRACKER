# ===========================================
# Price Tracker - Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# Application
APP_NAME=Price Tracker API
APP_VERSION=0.1.0
DEBUG=false

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=pricetracker
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/pricetracker

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated for docker, JSON array for local)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:80

# Scraping
SCRAPE_RATE_LIMIT_SECONDS=30
SCRAPE_MAX_RETRIES=3

# Scheduler
SYNC_PRICES_INTERVAL_HOURS=6
SYNC_TOURS_INTERVAL_HOURS=24
CLEANUP_DAYS_TO_KEEP=90

# Docker Ports
BACKEND_PORT=8000
FRONTEND_PORT=5173
HTTP_PORT=80
HTTPS_PORT=443

# Frontend
VITE_API_URL=/api
